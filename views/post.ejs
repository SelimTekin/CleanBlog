<%- include("partials/_header") -%>

<body>

  <!-- Navigation -->
  <%- include("partials/_navigation") -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= post.title %></h1>
            <span class="meta">Posted by
              <a href="https://selimtekin.com">Selim Tekin</a>
              on <%= post.dateCreated %></span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <%= post.detail %>
        </div>
      </div>
    </div>
  </article>

  <div class="d-flex justify-content-end">
    <a href="/posts/edit/<%= post._id %>" class="btn btn-primary mr-1">Update</a>
    <a href="/posts/<%= post._id %>?_method=DELETE" class="btn btn-danger mr-5" onclick="return confirm('ARE YOU SURE ?')">Delete</a>
  </div>
  
  <hr>

  <!-- Footer -->
  <%- include("partials/_footer") -%>

</body>

</html>
